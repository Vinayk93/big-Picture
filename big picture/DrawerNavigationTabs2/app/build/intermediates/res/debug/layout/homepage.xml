<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    >
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1">


            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/tableRow3">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Hollywood"
                    android:id="@+id/textView"
                    android:clickable="false"
                    android:singleLine="false"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="170dp"
                android:id="@+id/tableRow"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="40dp">
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/horizontalScrollView"
                    android:layout_gravity="center_vertical"
                    android:nestedScrollingEnabled="false"
                    android:measureAllChildren="false">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:layout_width="133dp"
                            android:layout_height="170dp"
                            android:id="@+id/imageButton" />
                        <ImageButton
                            android:layout_width="133dp"
                            android:layout_height="170dp"
                            android:id="@+id/imageButton2" />
                        <ImageButton
                            android:layout_width="133dp"
                            android:layout_height="170dp"
                            android:id="@+id/imageButton3" />
                        <ImageButton
                            android:layout_width="133dp"
                            android:layout_height="170dp"
                            android:id="@+id/imageButton4" />
                        <ImageButton
                            android:layout_width="133dp"
                            android:layout_height="170dp"
                            android:id="@+id/imageButton5" />
                        <ImageButton
                            android:layout_width="133dp"
                            android:layout_height="170dp"
                            android:id="@+id/imageButton6" />
                    </LinearLayout>

                </HorizontalScrollView>
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/tableRow41"
                android:layout_below="@+id/tableRow2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

                <TextView
                    android:layout_width="358dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Bollywood"
                    android:id="@+id/textView2"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="450dp"
                android:layout_height="170dp"
                android:id="@+id/tableRow2"
                android:layout_below="@+id/tableRow"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="40dp">

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/horizontalScrollView2"
                    android:layout_gravity="center_vertical" >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:layout_width="120dp"
                            android:layout_height="170dp"
                            android:id="@+id/imageButton7" />

                        <ImageButton
                            android:layout_width="120dp"
                            android:layout_height="170dp"
                            android:id="@+id/imageButton8" />

                        <ImageButton
                            android:layout_width="120dp"
                            android:layout_height="170dp"
                            android:id="@+id/imageButton9" />


                        <ImageButton
                            android:layout_width="120dp"
                            android:layout_height="170dp"
                            android:id="@+id/imageButton10" />
                        <ImageButton
                            android:layout_width="120dp"
                            android:layout_height="170dp"
                            android:id="@+id/imageButton110" />
                    </LinearLayout>
                </HorizontalScrollView>
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/tableRow32"
                android:layout_below="@+id/tableRow"
                android:layout_alignRight="@+id/tableRow2"
                android:layout_alignEnd="@+id/tableRow2"
                android:layout_marginRight="90dp"
                android:layout_marginEnd="90dp">

                <TextView
                    android:layout_width="375dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Tollywood"
                    android:id="@+id/textView3"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="170dp"
                android:layout_below="@+id/tableRow41"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/horizontalScrollView3"
                    android:layout_gravity="center_vertical" >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:layout_width="120dp"
                            android:layout_height="170dp"
                            android:id="@+id/imageButton11" />

                        <ImageButton
                            android:layout_width="120dp"
                            android:layout_height="170dp"
                            android:id="@+id/imageButton12" />

                        <ImageButton
                            android:layout_width="120dp"
                            android:layout_height="170dp"
                            android:id="@+id/imageButton14" />

                        <ImageButton
                            android:layout_width="120dp"
                            android:layout_height="170dp"
                            android:id="@+id/imageButton15" />
                        <ImageButton
                            android:layout_width="120dp"
                            android:layout_height="170dp"
                            android:id="@+id/imageButton16" />

                        <ImageButton
                            android:layout_width="120dp"
                            android:layout_height="170dp"
                            android:id="@+id/imageButton13" />
                    </LinearLayout>
                </HorizontalScrollView>
            </TableRow>
        </LinearLayout>
    </ScrollView>



</RelativeLayout>
